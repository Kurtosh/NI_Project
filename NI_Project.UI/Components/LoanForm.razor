@using NI_Project.Shared

<EditForm Model="Loan" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Reader Id</label>
        <InputText @bind-Value="Loan.ReaderId" class="form-control" />
        <ValidationMessage For="() => Loan.ReaderId" />
    </div>
    <div class="mb-3">
        <label class="form-label">Book Id</label>
        <InputText @bind-Value="Loan.BookId" class="form-control" />
        <ValidationMessage For="() => Loan.BookId" />
    </div>
    <div class="mb-3">
        <label class="form-label">Loan Date</label>
        <InputDate @bind-Value="Loan.LoanDate" class="form-control" />
        <ValidationMessage For="() => Loan.LoanDate" />
    </div>
    <div class="mb-3">
        <label class="form-label">Return Deadline</label>
        <InputDate @bind-Value="Loan.ReturnDeadline" class="form-control" />
        <ValidationMessage For="() => Loan.ReturnDeadline" />
    </div>

    <button type="submit" class="btn btn-primary">@ButtonText</button>
</EditForm>

@code {

    [Parameter]
    public Loan Loan { get; set; }

    [Parameter]
    public Func<Task> OnValidSubmit { get; set; }

    [Parameter]
    public string ButtonText { get; set; }

}